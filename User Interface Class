//This code will handle the user interface with a GUI
import java.awt.BorderLayout;
import java.awt.CardLayout;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.BorderFactory;
import javax.swing.JButton;
import javax.swing.JLabel;
import java.awt.event.ActionListener;

class UI implements ActionListener
{
  private JFrame frame;

  private JPanel mainPanel;
  private JPanel mainMenuPanel;
  private JPanel userPanel;
  private JPanel adminPanel;

  private JButton userButton;
  private JButton adminButton;

  private CardLayout layout;

  UI()
  {
    frame = new JFrame("Bank System");
    frame.setSize(400,300);
    frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    layout = new CardLayout();
    mainPanel = new JPanel(layout);

    displayMainMenu();
    displayUserMenu();
    displayAdminMenu();
    displayTransactionsMenu();

    mainPanel.add(mainMenuPanel, "Main Menu");
    mainPanel.add(userPanel, "User");
    mainPanel.add(adminPanel, "Administrator");

    frame.add(mainPanel);
    frame.setVisible(true);
  }

  void displayMainMenu() 
  {
    mainMenuPanel = new JPanel();

    mainMenuPanel.setSize(400,300);

    userButton = new JButton("User");
    userButton.setBounds(10,80,80,25);
    userButton.addActionListener(this);
    mainMenuPanel.add(userButton);
    
    adminButton = new JButton("Administrator");
    adminButton.setBounds(10,160,80,50);
    adminButton.addActionListener(this);
    mainMenuPanel.add(adminButton);
  }

  void displayUserMenu() 
  {
      userPanel = new JPanel();
      userPanel.add(new JLabel("Welcome User!"));
      JButton back = new JButton("Back");

      back.addActionListener(e -> layout.show(mainPanel, "Main Menu"));
      userPanel.add(back);
  }

  void displayAdminMenu() 
  {
      adminPanel = new JPanel();
      adminPanel.add(new JLabel("Welcome Administrator!"));
      JButton back = new JButton("Back");
      
      back.addActionListener(e -> layout.show(mainPanel, "Main Menu"));
      adminPanel.add(back);
  }

  void displayTransactionsMenu() 
  {
  }

  @Override
  public void actionPerformed(ActionEvent e)
  {
    if(e.getSource() == userButton)
    {
      layout.show(mainPanel, "User");
    }
    else if (e.getSource() == adminButton)
    {
      layout.show(mainPanel, "Administrator");
    }
  }
}

public class UI_Test 
{
    public static void main(String[] args) 
    {
       new UI();
    }
}
