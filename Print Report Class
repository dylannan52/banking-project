//This class will print the report

import java.util.Scanner;
import java.util.Random;

public class PrintReport
{
    private int[] reportID;
    private String reportType;
    private String dateGenerated;
    private Scanner keyboard;
    private Random rand;
    private StringBuilder stringReportID;
    
    //Constructor
    PrintReport()
    {
        reportID = new int[6];
        keyboard = new Scanner(System.in);
        rand = new Random();
        stringReportID = new StringBuilder();
    }

    public void generateReport()
    {
        //Generate a random Report ID
        for(int i = 0; i < reportID.length; i++)
        {
            reportID[i] = rand.nextInt(10);
        }
        
        //Format it as a String (since it is an array of integers)
        for(int i = 0; i < reportID.length; i++)
        {
            stringReportID.append(reportID[i]);
            if((i + 1) % 6 == 0 && i != reportID.length - 1)
            {
                stringReportID.append("");
            }
        }
        
        //Input the date of when the report was generated
        System.out.println("Enter the date of when the report was generated: ");
        dateGenerated = keyboard.nextLine(); //Date should be inputted as MM/dd/yyyy
        
        //Input the type of report that's printed
        System.out.println("Enter the type of report that is to be printed: ");
        reportType = keyboard.nextLine();
        
        //Output
        System.out.println("\nGenerating report for Report ID: " + stringReportID.toString());
        System.out.println("Report Type: " + reportType);
        System.out.println("Date Generated: " + dateGenerated);
    }
    
    public static void main(String[] args)
    {
        PrintReport p = new PrintReport();
        p.generateReport();
    }
}
