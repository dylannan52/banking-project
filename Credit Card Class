//This wil contain credit card information

import java.util.Random;
import java.time.LocalDate;
import java.time.format.DateTimeFormatter;

class CreditCard
{
    private int[] cardNumber;
    private String cardHolder;
    private int[] cvv;
    private String expirationDate;
    private double cardBalance;
    private Random rand;

    CreditCard()
    {
      cardNumber = new int[16];
      cardHolder = "";
      cvv = new int[3];
      expirationDate = "";
      cardBalance = 00.00;
      rand = new Random();
    }

    void generateCardNumber()
    {
        StringBuilder cardNum = new StringBuilder();
        
        cardNumber[0] = 4;
        for(int i = 1; i < cardNumber.length; i++)
        {
            cardNumber[i] = rand.nextInt(10);
        }
        cardNumber[15] = 0;
        
        for(int i = 0; i < cardNumber.length; i++)
        {
            cardNum.append(cardNumber[i]);
            if((i + 1) % 4 == 0 && i != cardNumber.length - 1)
            {
                cardNum.append(" ");
            }
        }
        
        System.out.println("Card Number: " + cardNum.toString());
    }

    void generateExpirationDate()
    {
        LocalDate currentDate = LocalDate.now();
        LocalDate expire = currentDate.plusYears(3);
        
        DateTimeFormatter format = DateTimeFormatter.ofPattern("MM/yyyy");
        expirationDate = expire.format(format);
        
        System.out.println("Expiration Date: " + expirationDate);
    }

    void generateCVV()
    {
        StringBuilder CVV = new StringBuilder();
        
        for(int i = 0; i < cvv.length; i++)
        {
            cvv[i] = rand.nextInt(10);
        }
        
        for(int i = 0; i < cvv.length; i++)
        {
            CVV.append(cvv[i]);
            if((i + 1) % 3 == 0 && i != cvv.length - 1)
            {
                CVV.append("");
            }
        }
        
        System.out.println("CVV: " + CVV.toString());
    }
    
    void startingBalance()
    {
        cardBalance = 5000.00;
        System.out.println("Card Balance: $" + cardBalance);
    }
}

public class CreditCardTest 
{
    public static void main(String[] args) 
    {
        CreditCard c = new CreditCard();
        c.generateCardNumber();
        c.generateExpirationDate();
        c.generateCVV();
        c.startingBalance();
    }
}
