package com.mycompany.finalbank;

import java.util.Scanner;

public class Accounts {
    
    private String username;
    private String password;
    private int pin_number;
    private String email;
    protected int account_num;
    protected int routing_num;
    protected String name;
    protected String address;
    protected int zip;
    private double balance = 0.0; // new shared balance

    public Accounts(String username, String password, int pin_number, String email,
                    int account_num, int routing_num, String name, String address, int zip) {
        this.username = username;
        this.password = password;
        this.pin_number = pin_number;
        this.email = email;
        this.account_num = account_num;
        this.routing_num = routing_num;
        this.name = name;
        this.address = address;
        this.zip = zip;
    }

    public String getUsername() { return username; }
    public String getPassword() { return password; }
    public int getPin_number() { return pin_number; }
    public String getEmail() { return email; }
    public int getAccount_num() { return account_num; }
    public int getRouting_num() { return routing_num; }
    public String getName() { return name; }
    public String getAddress() { return address; }
    public int getZip() { return zip; }

    public double getBalance() { return balance; }
    public void setBalance(double balance) { this.balance = balance; }
    public void addToBalance(double amount) { this.balance += amount; }
    public void subtractFromBalance(double amount) { this.balance -= amount; }

    public void changePassword() {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter your current password: ");
        String input = scanner.nextLine();

        while (!password.equals(input)) {
            System.out.println("That is not the correct password. Try again.");
            input = scanner.nextLine();
        }

        System.out.println("Enter your new password: ");
        this.password = scanner.nextLine();
        System.out.println("Password changed.");
    }

    public void changePIN() {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter your current PIN: ");
        int input = scanner.nextInt();

        while (input != pin_number) {
            System.out.println("Incorrect PIN. Try again.");
            input = scanner.nextInt();
        }

        System.out.println("Enter new 4-digit PIN: ");
        int newPin = scanner.nextInt();
        this.pin_number = newPin;
        System.out.println("PIN changed.");
    }

    public void changeEmail() {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter your current email: ");
        String input = scanner.nextLine();

        while (!email.equals(input)) {
            System.out.println("Incorrect email. Try again.");
            input = scanner.nextLine();
        }

        System.out.println("Enter your new email: ");
        this.email = scanner.nextLine();
        System.out.println("Email updated.");
    }

    public void checkAccount() {
        System.out.println("Account number is: " + account_num);
    }

    public void checkRouting() {
        System.out.println("Routing number is: " + routing_num);
    }
}

