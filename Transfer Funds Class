//This will handle the transfer of funds from one account to another

package com.mycompany.finalbank;

import java.util.Scanner;

public class TransferFunds {

    private int transferID;
    private static int nextTransferID = 1;

    public TransferFunds() {
        this.transferID = nextTransferID++;
    }

    public void transfer(Accounts user) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter recipient username (simulated): ");
        String recipientUsername = scanner.nextLine();

        System.out.print("Enter amount to transfer: ");
        double amount = scanner.nextDouble();

        if (amount <= 0) {
            System.out.println(" Amount must be greater than zero.");
            return;
        }

        if (amount > user.getBalance()) {
            System.out.println(" Amount exceeds available balance.");
            return;
        }

        // Simulate the transfer
        user.subtractFromBalance(amount);
        System.out.println("âœ… Transfer successful.");
        System.out.println("Amount: $" + amount);
        System.out.println("Recipient: " + recipientUsername);
        System.out.println("Transfer ID: " + transferID);
    }

    public int getTransferID() {
        return transferID;
    }
}
