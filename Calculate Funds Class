//This will calculate the currency left in the account (withdrawals, deposits)

public class CalculateFunds extends Deposit extends Withdraw
{
	private double currentBalance;
	private double depositAmount;
	private double withdrawalAmount;

  //Constructor
	public CalculateFunds(double startingBalance)
	{
		this.currentBalance = startingBalance;
	}

	//Calculate return balance
	public double calculate(depositAmount, withdrawalAmount)
	{
		currentBalance += depositAmount;
		currentBalance -= withdrawalAmount;
		return currentBalance;
	}
	
	//Return the updated balance
	public void updateBalance(double depositAmount, double withdrawal Amount)
	{
		currentBalance = calculateBalance(depositAmount, withdrawalAmount)
	}
}
